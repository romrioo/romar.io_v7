---
import '~/styles/styles.css';
import Layout from '../layouts/Layout.astro';
import Download from '../components/Download.astro';

type Props = {
  frontmatter: {
    title: string;
    pdfLink?: string;
    noIndex?: boolean;
    description?: string;
  };
};

const { title, pdfLink, noIndex, description } = Astro.props.frontmatter;

const initials = title
  .split(' ')
  .map((word) => word[0].toUpperCase())
  .slice(0, 2);

---

<Layout title="Resume">
  <main>

    <article class="region prose wrapper">
      {
        pdfLink && (
          <div class="not-prose absolute right-4 top-4">
            <Download href={pdfLink} />
          </div>
        )
      }
      <div class="flex h-fit select-none flex-col items-center"
      >
        <span>{initials[0]}</span>
        <span>{initials[1]}</span>
      </div>
      <slot />
    </article>


    <footer class="region prose wrapper">
      <p>Resume Last updated February / <span class="text-gradient footer-style">2023</span></p>
    </footer>
  </main>
</Layout>